html
  include ./includes/head.jade

  body
    div.container
      div.jumbotron
        include ./includes/top.jade

        h3 Let's create an admin user

        form(name="create-admin" action="/create-admin", method="post")
          div.form-group
            label(for="email") Email
            input.form-control(type="email", name="email", id="email" required)
          div.form-group
            label(for="password") Password
            input.form-control(type="password", name="password", id="password" required)
          input.btn.btn-default(type="submit" value="Submit")

    script(src="/scripts/script.js")